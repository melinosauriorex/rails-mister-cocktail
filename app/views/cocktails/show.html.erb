<h1>Showing Cocktails</h1>
<p>Find me in app/views/cocktails/show.html.erb</p>
<h2><%= @cocktail.name %></h2>

<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.ingredient.name %> - <%= dose.description %> <%= link_to "Remove dose", dose_path(dose), method: :delete, data: {confirm: "Are you sure you want to delete it?" } %></li>
  <% end %>
</ul>


<%= link_to "Back", root_path %>

<%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %>


<h1>Cocktails</h1>
<p>Find me in app/views/cocktails/index.html.erb</p>

<ul>
<% @cocktails.each do |cocktail| %>
  <%= link_to cocktail_path(cocktail) do %>
    <h2><%= cocktail.name.upcase %></h2>
  <% end %>
  <p><%= link_to "Edit", edit_cocktail_path(cocktail) %></p>
  <p><%= link_to "Remove", cocktail_path(cocktail), method: :delete, data: {confirm: "Are you sure you want to delete it?"} %></p>
<% end %>
</ul>

<h1>Cocktails</h1>
<p>Because water is just for plants</p>

<%= simple_form_for @cocktail do |f| %>
  <%= f.input :name %>
  <%= f.button :submit %>
<% end %>

<ul>
<% @cocktails.each do |cocktail| %>
  <%= link_to cocktail_path(cocktail) do %>
    <h2><%= cocktail.name.upcase %></h2>
  <% end %>
  <p><%= link_to "Edit", cocktail_path(cocktail) %></p>
  <p><%= link_to "Remove", cocktail_path(cocktail), method: :delete, data: {confirm: "Are you sure you want to delete it?"} %></p>
<% end %>
</ul>

